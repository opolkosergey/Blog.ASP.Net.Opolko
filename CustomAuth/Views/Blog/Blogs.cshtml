@using CustomAuth.Pagination
@model CustomAuth.ViewModels.BlogsViewModel

@{
    ViewBag.Title = "User's blogs";
}

<div class="col-lg-9">
    <h2>Blogs</h2>
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayName("Title")
            </th>
            <th>
                @Html.DisplayName("Date created")
            </th>
            <th>
                @Html.DisplayName("The number of articles")
            </th>
            <th>
            </th>
        </tr>
        @foreach (var item in Model.BlogViewModels)
        {
            <tr class="text-primary">
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArticleCount)
                </td>
                <td>
                    <a href="@Url.Action("Details", new {id = item.Id})" class="btn btn-default">Read more</a>
                </td>
            </tr>
        }
    </table>
    @if (Model.PageInfo.TotalPages != 1)
    {
        <div class="btn-group">
            @Html.PageLinks(Model.PageInfo, x => Url.Action("Blogs", new {uId = Model.UserId, page = x }))
        </div>
    }
</div>